<div class="form-group mb-4">
    <label for="title">Title</label>
    <input required value="<%=article.title%>" type="text" name = "title" class="form-control">
</div>

<div class="form-group mb-4">
    <label for="description">Description</label>
    <textarea style="overflow: auto;" name = "description" id="description" class="form-control">
        <%=article.description%>
    </textarea>
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea style="overflow: auto;" required type="text" name = "markdown" id="markdown" class="form-control">
        <%=article.markdown%>
    </textarea>
</div>


<button type="submit" class="btn btn-primary mt-4">Save</button>
<a href="/" class="btn btn-secondary mt-4">Cancel</a>